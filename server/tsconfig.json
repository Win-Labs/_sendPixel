{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true, // Skip type checking for declaration files
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "allowSyntheticDefaultImports": true, // Simplify imports
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "moduleResolution": "Node", // Use Node module resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Isolated module support for transpilation
    "outDir": "./dist", // Specify the output directory for compiled files
    "rootDir": "./src", // Specify the root directory of input files
    "noImplicitAny": false, // Optionally loosen implicit `any` checks,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"], // Include the source folder
  "exclude": ["node_modules", "dist"] // Exclude the node_modules folder
}
